<head>
  <meta charset="utf-8">
  <title>蔵書管理：検索</title>
  <link rel="stylesheet" href="css/style.css">
  </head>
<p id="notice"><%= notice %></p>

<div id="header">
<div id="hArea">	

	<div id="hLogo">キーワード検索</div>

	<div id="hNavi">
		<ul>
			<li><%= link_to image_tag('entry_book.jpg'), new_book_path %></li>
			<li><a href="./EntryUser.html"><img src="./entry_user.jpg"></a></li>
		</ul>
	</div>

	</div>
</div>

<div id="main">
<div id="SchArea">
	<div id="SchTxt">
	<%= form_tag(books_path, method: :get) do %>
		<%= text_field_tag :search %>
		<%= submit_tag '検索', :tilte => nil %>
	<% end %>
	</div>
</div>
</div>

<div id="Contents">
<div id="SchRes">
	
	<div id="Squeeze">
	<h3>絞り込みを表示</h3>
    <div id="SquMenu">
		<div id="Squtype">種別 <img src="/close.jpg" width="20px" onclick="changeIMG()" align=right></div>
			<div id="typeBox">
			<ul>
				<li><a href="">- 図書</a></li>
				<li><a href="">- 雑誌</a></li>
				<li><a href="">- 漫画</a></li>
				<li><a href="">- 絵本</a></li>
			</ul>
			</div>

		<div id="Squpubyear">出版年 <img src="/close.jpg" width="20px" align=right></div>
			<div class="pubyearBox">
			<ul>
				<li><input type="text" name="year" size="5" maxlength="4" >年</li>
				～
				<li><input type="text" name="year" size="5" maxlength="4" >年</li>
			</ul>
			</div>
	</div>
	</div>

	<div id="Result"><h3>XX冊中　XX冊ヒット</h3>
	<%= link_to '検索条件のクリア', request.path %>
	<hr>
    <% @books.each do |book| %>
	<div id="list">
      <tr>
        <td><%= book.bar_no %></td>
        <td><%= book.title %></td>
        <td><%= book.title_yomi %></td>
        <td><%= book.series %></td>
        <td><%= book.series_yomi %></td>
        <td><%= book.volume %></td>
        <td><%= book.author %></td>
        <td><%= book.author_yomi %></td>
        <td><%= book.publisher %></td>
        <td><%= book.publisher_yomi %></td>
        <td><%= book.p_ymd %></td>
        <td><%= book.isbn1_issn %></td>
        <td><%= book.isbn2 %></td>
        <td><%= book.types %></td>
        <td><%= book.collection %></td>
        <td><%= book.label1 %></td>
        <td><%= book.label2 %></td>
        <td><%= book.label3 %></td>
        <td><%= book.status %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

	</div>
    <% end %>

	<%= paginate @books %>
	</div>
</div>
</div>

</body>
</html>
