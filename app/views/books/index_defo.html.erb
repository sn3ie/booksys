<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Bar no</th>
      <th>Link no</th>
      <th>Title</th>
      <th>Title yomi</th>
      <th>Series</th>
      <th>Series yomi</th>
      <th>Volume</th>
      <th>Author</th>
      <th>Author yomi</th>
      <th>Publisher</th>
      <th>Publisher yomi</th>
      <th>P ymd</th>
      <th>Price</th>
      <th>Isbn1 issn</th>
      <th>Isbn2</th>
      <th>Types</th>
      <th>Collection</th>
      <th>Label1</th>
      <th>Label2</th>
      <th>Label3</th>
      <th>Status</th>
      <th>Lend date</th>
      <th>Back date</th>
      <th>Lend flg</th>
      <th>User</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.bar_no %></td>
        <td><%= book.link_no %></td>
        <td><%= book.title %></td>
        <td><%= book.title_yomi %></td>
        <td><%= book.series %></td>
        <td><%= book.series_yomi %></td>
        <td><%= book.volume %></td>
        <td><%= book.author %></td>
        <td><%= book.author_yomi %></td>
        <td><%= book.publisher %></td>
        <td><%= book.publisher_yomi %></td>
        <td><%= book.p_ymd %></td>
        <td><%= book.price %></td>
        <td><%= book.isbn1_issn %></td>
        <td><%= book.isbn2 %></td>
        <td><%= book.types %></td>
        <td><%= book.collection %></td>
        <td><%= book.label1 %></td>
        <td><%= book.label2 %></td>
        <td><%= book.label3 %></td>
        <td><%= book.status %></td>
        <td><%= book.lend_date %></td>
        <td><%= book.back_date %></td>
        <td><%= book.lend_flg %></td>
        <td><%= book.user_id %></td>
        <td><%= book.memo %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

