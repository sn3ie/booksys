<head>
  <meta charset="utf-8">
  <title>蔵書管理：検索</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="./js/sn3.js"></script>
  <link rel="stylesheet" href="css/reset.css">
  <link rel="stylesheet" href="css/style.css">
  </head>
<p id="notice"><%= notice %></p>

<div id="header">
<div id="hArea">	

	<div id="hLogo">キーワード検索</div>

	<div id="hNavi">
		<ul>
			<li><%= link_to image_tag('/images/entry_book.jpg'), new_book_path %></li>
			<li><a href="./EntryUser.html"><img src="/entry_user.jpg"></a></li>
		</ul>
	</div>

	</div>
</div>


<div id="main">
<div id="SchArea">
	<div id="SchTxt">
	<form method="post" action="cgi-bin/abc.cgi">
		<input type="search" name="Sch" size="130" maxlength=""  placeholder="検索キーワードを入力" id="keyWord">
		<input type="image" src="/search.jpg" onclick="document.frm.submit();" id="SchButton">
	</form>
	</div>
</div>
</div>

<div id="Contents">
<div id="SchRes">
	
	<div id="Squeeze">
	<h3>絞り込みを表示</h3>
    <div id="SquMenu">
		<div id="Squtype">種別 <img src="/close.jpg" width="20px" onclick="changeIMG()" align=right></div>
			<div id="typeBox">
			<ul>
				<li><a href="">- 図書</a></li>
				<li><a href="">- 雑誌</a></li>
				<li><a href="">- 漫画</a></li>
				<li><a href="">- 絵本</a></li>
			</ul>
			</div>

		<div id="Squpubyear">出版年 <img src="/close.jpg" width="20px" align=right></div>
			<div class="pubyearBox">
			<ul>
				<li><input type="text" name="year" size="5" maxlength="4" >年</li>
				～
				<li><input type="text" name="year" size="5" maxlength="4" >年</li>
			</ul>
			</div>
	</div>
	</div>


	<div id="Result"><h3>XX冊中　XX冊ヒット</h3>
	<hr>
	<table>
  <thead>
    <tr>
      <th>Bar no</th>
      <th>Title</th>
      <th>Title yomi</th>
      <th>Series</th>
      <th>Series yomi</th>
      <th>Volume</th>
      <th>Author</th>
      <th>Author yomi</th>
      <th>Publisher</th>
      <th>Publisher yomi</th>
      <th>P ymd</th>
      <th>Label1</th>
      <th>Label2</th>
      <th>Label3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.bar_no %></td>
        <td><%= book.title %></td>
        <td><%= book.title_yomi %></td>
        <td><%= book.series %></td>
        <td><%= book.series_yomi %></td>
        <td><%= book.volume %></td>
        <td><%= book.author %></td>
        <td><%= book.author_yomi %></td>
        <td><%= book.publisher %></td>
        <td><%= book.publisher_yomi %></td>
        <td><%= book.p_ymd %></td>
        <td><%= book.label1 %></td>
        <td><%= book.label2 %></td>
        <td><%= book.label3 %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
<!--        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
	</div>
</div>
</div>

</body>
</html>
